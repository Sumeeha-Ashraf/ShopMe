    <section>
        <div id="carouselExampleSlidesOnly" class="carousel slide mt-5" data-ride="carousel">
  <div class="carousel-inner ">
    <div class="carousel-item active">
      <img class="w-100" src="/images/banner-2.png" alt="First slide">
    </div>
  </div>
</div>
        <div class="container mt-5 p-3">
            <div class="row">
                {{#each products}}
                 <div class="col-sm-6 col-md-4 col-lg-3 p-3" style="align-content:center">
                    <div class="card" style="width: auto;height: auto">
                        <center><img style="height: 170px; width:170px" class="card-img-top mt-4" src="/product-images/{{this._id}}.jpg" alt="Card image cap"></center>
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text" style="color: rgb(7, 87, 179);"><b>Rs. {{this.price}}</b></p>
                            <p class="card-text">{{this.description}}</p>
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
