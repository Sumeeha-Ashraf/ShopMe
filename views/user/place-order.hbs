<section><br>
    <div class="container mt-5">
        <form action="" id="checkout-form">
            <div class="row">
                <div class="col-md-6">
                    <h2>Delivery Details</h2><br>
                    <div>
                        <label for="">Address</label>
                        <input type="text" class="form-control" name="address" id="adress">
                        <label for="">Pincode</label>
                        <input type="text" class="form-control" name="pincode" id="pincode">
                        <label for="">Contact No.</label>
                        <input type="text" class="form-control" name="mobile" id="mobile">
                    </div>
                </div>
                <div class="col-md-4 mt-4">
                    <div class="container mt-5 checkout" style="border:2px solid; border-radius:7px; padding:30px">
                        <div class="payment">
                            <h5>Payment method</h5>
                            <label for="" class="radio-inline">
                                <input type="radio" name="payment-method" value ="COD" checked class="mr-3">COD
                            </label><br>
                            <label for="" class="radio-inline">
                                <input type="radio" name="payment-method" value ="Online Payment" checked class="mr-3">Online Payment
                            </label><br><br>
                            <button class="btn-primary btn">Pay Now</button>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</section>