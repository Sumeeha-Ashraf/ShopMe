<section>
    <div class="container mt-3">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table table-hover mt-3">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.Name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.category}}</td>

                    <td><img style="width: 60px;height:60px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td><a href="/admin/Edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a></td>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
